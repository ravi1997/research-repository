/* Header */




/* Table Styling */
table {
    width: 100%;
    border-collapse: collapse;
    margin: 20px auto; /* Center table with margin */
}

table,
th,
td {
    border: 1px solid black;
}

th,
td {
    padding: var(--padding);
    text-align: left;
}

/* Pagination Styling */
.pagination {
    display: flex;
    justify-content: center;
    margin-top: 20px;
}

.pagination button {
    margin: 0 5px;
    padding: var(--padding);
}

/* Main Container */


/* Intro Section */
.intro {
    background-color: white;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0px 4px 6px var(--shadow);
    text-align: center;
    margin-bottom: 40px;
}

.center-container {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
}

#table-container {
    width: 100%;
    display: flex;
    justify-content: center;
}

.intro h2 {
    font-size: 2rem;
    color: var(--text-color);
    margin-top: 0;
}

.intro p {
    font-size: var(--font-size-large);
    line-height: 1.6;
    color: var(--light-text-color);
}

/* Button Styling */
.button a {
    text-decoration: none;
    color: white;
    background-color: var(--primary-color);
    padding: var(--padding) 20px;
    border-radius: var(--border-radius);
    font-size: var(--font-size-large);
    transition: background-color 0.3s, transform 0.2s;
    display: inline-block; /* Ensures button shape */
}

.button a:hover {
    background-color: var(--primary-light);
    transform: scale(1.05); /* Slightly enlarge the button */
}

/* Upload Section */
.upload-section {
    margin-top: 40px;
    text-align: center;
}

.upload-section h3 {
    font-size: 1.8rem;
    color: var(--text-color);
    margin-bottom: 15px;
}

.upload-section input[type="file"] {
    padding: var(--padding);
    font-size: var(--font-size-medium);
}

.upload-section button {
    margin-top: 10px;
    padding: var(--padding) 20px;
    font-size: var(--font-size-medium);
    color: white;
    background-color: var(--primary-color);
    border: none;
    border-radius: var(--border-radius);
    cursor: pointer;
    transition: background-color 0.3s;
}

.upload-section button:hover {
    background-color: var(--primary-light);
}

/* Features Section */
.features {
    display: flex;
    flex-wrap: wrap;
    gap: 20px; /* Using gap instead of margins for spacing */
    margin-top: 40px;
    justify-content: space-between;
}

.feature {
    text-align: center;
    padding: 20px;
    background-color: #e9ecef;
    border-radius: 8px;
    flex: 1 1 30%;
    min-width: 250px; /* Minimum width for responsiveness */
}

.feature h3 {
    margin-bottom: 15px;
    font-size: 1.5rem;
    color: var(--text-color);
}

.feature p {
    font-size: var(--font-size-medium);
    color: #666;
}

/* Footer */

/* Login Container */
.login-container {
    background: #fff;
    padding: 40px;
    border-radius: 10px;
    box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.3);
    max-width: 400px;
    width: 100%;
    text-align: center;
    margin: 0 auto; /* Center alignment */
    animation: fadeIn 0.8s ease-in-out;
}

.login-container h2 {
    margin-bottom: 20px;
    color: var(--primary-color);
    font-weight: 500;
}

.login-container input[type="text"],
.login-container input[type="password"] {
    width: 100%;
    padding: 12px;
    margin: 10px 0;
    border-radius: var(--border-radius);
    border: 1px solid #ddd;
    font-size: var(--font-size-medium);
    transition: border-color 0.3s, box-shadow 0.2s; /* Added shadow transition */
}

.login-container input:focus {
    border-color: var(--primary-light);
    outline: none;
    box-shadow: 0 0 5px var(--primary-light); /* Added shadow on focus */
}

.login-container button {
    width: 100%;
    padding: 12px;
    background: var(--primary-light);
    color: white;
    border: none;
    border-radius: var(--border-radius);
    font-size: var(--font-size-medium);
    cursor: pointer;
    transition: background 0.3s;
    font-weight: 500;
}

.login-container button:hover {
    background: var(--primary-color);
}

.login-container p {
    margin-top: 15px;
    font-size: var(--font-size-small);
    color: #666;
}

.login-container a {
    color: var(--primary-light);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s;
}

.login-container a:hover {
    text-decoration: underline;
}

/* Captcha Section */
.captcha-box {
    display: flex;
    align-items: center;
    margin: 10px 0;
    justify-content: space-between;
}

.captcha-code {
    font-weight: 500;
    background-color: #f2f2f2;
    padding: 10px;
    border-radius: var(--border-radius);
    font-size: 1.1rem;
    user-select: none; /* Prevent text selection */
    cursor: not-allowed; /* Change cursor to indicate no selection */
    text-align: center;
    color: var(--text-color);
    flex-grow: 1;
}

.refresh-btn {
    background: none;
    border: none;
    color: var(--primary-light);
    font-size: 1.1rem;
    cursor: pointer;
    margin-left: 10px;
    transition: color 0.3s;
}

.refresh-btn:hover {
    color: var(--primary-color);
}

/* Card Layout Styling */
.card {
    background-color: white;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 4px 8px var(--shadow);
    margin-bottom: 20px;
    text-align: center;
}

.card h3 {
    font-size: 1.5rem;
    color: var(--primary-color);
    margin-bottom: 10px;
}

.card p {
    font-size: var(--font-size-medium);
    color: var(--light-text-color);
    margin-top: 10px;
}

/* Input and Button Styling */
.card input[type="file"],
.card input[type="text"],
.card input[type="submit"],
.card button {
    padding: var(--padding);
    font-size: var(--font-size-medium);
    border-radius: var(--border-radius);
    border: 1px solid #ddd;
    margin: 10px 0;
    width: 100%;
    box-sizing: border-box;
}

.card button {
    background-color: var(--primary-light);
    color: white;
    border: none;
    cursor: pointer;
    transition: background-color 0.3s;
}

.card button:hover {
    background-color: var(--primary-color);
}

/* Alert Box Styling */
.alert-box {
    display: none; /* Initially hidden */
    padding: var(--padding);
    border-radius: var(--border-radius);
    margin: 20px 0;
}

.alert-box.show {
    display: block; /* Show when needed */
}

.alert-box.success {
    background-color: #d4edda;
    color: #155724;
}

.alert-box.error {
    background-color: #f8d7da;
    color: #721c24;
}

/* Media Queries for Responsive Design */
@media (max-width: 768px) {
    .features {
        flex-direction: column;
        align-items: center;
    }

    .feature {
        flex: 1 1 100%; /* Full width on smaller screens */
    }

    .login-container {
        padding: 20px; /* Less padding on smaller screens */
    }
}

@media (min-width: 769px) {
    .features {
        flex-direction: row; /* Side by side on larger screens */
    }

    .feature {
        flex: 1 1 30%; /* Each feature takes up to 30% */
    }
}
